{% extends 'base.html.twig' %}

{% block title %}Appartement{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2 class="m-0 font-weight-bold text-primary">Appartement</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ appartement.id }}</td>
                        </tr>
                        <tr>
                            <th>Libelle</th>
                            <td>{{ appartement.libelle }}</td>
                        </tr>
                        <tr>
                            <th>Cout</th>
                            <td>{{ appartement.cout }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="{{ path('app_appartement_index') }}"><button class="btn btn-primary">Retour</button></a>

    <a href="{{ path('app_appartement_edit', {'id': appartement.id}) }}"><button class="btn btn-info">Modifier</button></a>

    {{ include('appartement/_delete_form.html.twig') }}
{% endblock %}
